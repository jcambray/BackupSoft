<Window x:Class="BackupSoftGraphics.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:y="clr-namespace:BackupSoftGraphics.Properties"
        xmlns:local =  "clr-namespace:BackupSoftGraphics"
        Title="Paramètres" Height="500" Width="545"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown" >
        <Border BorderBrush="White" BorderThickness="1" Background="#FF58AFFF">
        <Grid Background="Transparent" Margin="5.2,0.2,-4.8,0.4">
            <TabControl HorizontalAlignment="Left" Height="444" Margin="6,10,0,0" VerticalAlignment="Top" Width="522"
                        Style="{StaticResource tabControlStyle}" >
                <TabItem Header="paramètres" DataContext="{Binding Path=Application.Config}">
                    <Grid Background="White" Margin="0,-1,0,1.4">
                        <GroupBox Header="Sauvegarde" HorizontalAlignment="Left" Margin="10,13,0,0" VerticalAlignment="Top" Height="166" Width="496" FontFamily="Comic Sans MS">
                            <Grid>
                                <Button x:Name="btnParcourir" Content="Parcourir" HorizontalAlignment="Left" Margin="385,60,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.107,-0.538"/>
                                <Label Content="Intervalle entre deux sauvegardes:" HorizontalAlignment="Left" Margin="49,4,0,0" VerticalAlignment="Top"/>
                                <Label Content="jour(s)" HorizontalAlignment="Left" Margin="300,4,0,0" VerticalAlignment="Top"/>
                                <Label Content="Heure de la sauvegarde:" HorizontalAlignment="Left" Margin="113,30,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.51,0.426" Width="142"/>
                                <TextBox x:Name="tbHeure" Text="{Binding Path=heure}" HorizontalAlignment="Left" Height="23" Margin="260,34,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="24"/>
                                <Label Content=":" HorizontalAlignment="Left" Margin="284,32,0,0" VerticalAlignment="Top" Width="15" HorizontalContentAlignment="Center"/>
                                <TextBox x:Name="tbMinute"  Text="{Binding Path=minute}" HorizontalAlignment="Left" Height="23" Margin="298,34,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="24"/>
                                <Label x:Name="tbCibleSauvegarde" Content="Cible de la sauvegarde:" HorizontalAlignment="Left" Margin="117,58,0,0" VerticalAlignment="Top" Width="142"/>
                                <TextBox Name="tbPath" HorizontalAlignment="Left" Height="23" Margin="260,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding Path=path}"/>
                                <Label Content="Nombre de sauvegarde à conserver:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="44,85,0,0"/>
                                <ComboBox x:Name="cbKeepSave" SelectedValue="{Binding Path=nbSaves}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="39" Margin="260,88,0,0"/>
                                <ComboBox x:Name="cbPeriod" SelectedValue="{Binding Path=period}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="39" Margin="260,6,0,0"/>
                            </Grid>
                        </GroupBox>
                        <GroupBox Header="Général" HorizontalAlignment="Left" Margin="10,184,0,0" VerticalAlignment="Top" Height="61" Width="496">
                            <CheckBox x:Name="cbAutoShutDown" Content="Eteindre le poste après sauvegarde" HorizontalAlignment="Left" Height="21" Margin="54,11,0,0" VerticalAlignment="Top" Width="227" FlowDirection="RightToLeft"/>
                        </GroupBox>
                        <GroupBox Header="Mails" HorizontalAlignment="Left" Margin="10,247,0,0" VerticalAlignment="Top" Height="160" Width="496">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="28*"/>
                                    <RowDefinition Height="28*"/>
                                    <RowDefinition Height="28*"/>
                                    <RowDefinition Height="28*"/>
                                    <RowDefinition Height="28*"/>
                                    <RowDefinition Height="15*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="193*"/>
                                    <ColumnDefinition Width="290*"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Expediteur:" HorizontalAlignment="Left" Margin="118,3,0,0" VerticalAlignment="Top" Height="27" Width="75" Grid.ColumnSpan="2"/>
                                <Label Content="Destinataires:" HorizontalAlignment="Left" Margin="103,3.6,0,0" VerticalAlignment="Top" Height="27" Width="90" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
                                <Label Content="Serveur SMTP:" HorizontalAlignment="Left" Margin="97,3.2,0,0" VerticalAlignment="Top" Height="27" Width="96" Grid.Row="2" Grid.ColumnSpan="2"/>
                                <TextBox x:Name="tbExp" Text="{Binding Path=ExpAdress}" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="120" Margin="2.2,5,0,0" Grid.Column="1"/>
                                <TextBox x:Name="tbDest" Text="{Binding Path=DestAdress}" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="120" Margin="2.2,5,0,0" Grid.Column="1" Grid.Row="1"/>
                                <TextBox x:Name="tbSMTP" Text="{Binding Path=SMTP}" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="120" Margin="2.2,5,0,0" Grid.Column="1" Grid.Row="2"/>
                                <Label Content="Port:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="156,0.8,0,0" Height="27" Width="37" Grid.Row="3" Grid.ColumnSpan="2"/>
                                <TextBox x:Name="tbPort" Text="{Binding Path=Port}" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="120" Margin="2.2,5,0,0" Grid.Column="1" Grid.Row="3"/>
                                <TextBox x:Name="tbMDP" Text="{Binding Path=PWDExp}" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="120" Margin="2.2,5,0,0" Grid.Column="1" Grid.Row="4"/>
                                <Label Content="Mot de passe expediteur:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="41,3.4,0,0" Height="27" Width="152" Grid.Row="4" Grid.ColumnSpan="2"/>
                                <CheckBox Name="cbSSL" IsChecked="{Binding Path=SSL}" Content="SSL" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="189.2,9,0,0" Grid.RowSpan="2" FlowDirection="RightToLeft"/>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </TabItem>
                <TabItem Header="Choix des fichiers">
                    <Grid Background="White">
                        <!--<TreeView Name="folderTreeView" ItemsSource="{Binding Path=TreeViewItemModelList}" SelectedItemChanged="folderTreeView_SelectedItemChanged"  HorizontalAlignment="Left" Height="397" Margin="10,10,0,0" VerticalAlignment="Top" Width="496">
                            <TreeView.ItemTemplate>
                                <HierarchicalDataTemplate DataType="{x:Type local:TreeViewItemModel}" ItemsSource="{Binding Path=Children}">
                                    <TreeViewItem Foreground="#FF58AFFF"  IsExpanded="{Binding IsNotEmpty}" CheckBox.Click="TreeViewItem_Click">
                                        <TreeViewItem.Header>
                                            <StackPanel Orientation="Horizontal">
                                                <Image  Source="image\dossier_windows_small.jpg"/>
                                                <CheckBox Name="cbTreeViewItem" Focusable="False" IsChecked="{Binding Path=IsChecked}"/>
                                                <ContentPresenter  Content="{Binding Name}" />
                                            </StackPanel>
                                        </TreeViewItem.Header>
                                    </TreeViewItem>
                                </HierarchicalDataTemplate>
                            </TreeView.ItemTemplate>
                        </TreeView>-->
                        <TreeView>
                        </TreeView>
                    </Grid>    
                </TabItem>
            </TabControl>
            <Button Name="btnOK" Content="OK" HorizontalAlignment="Left" Margin="364,468,0,0" VerticalAlignment="Top" Width="75" Click="btnOK_Click"/>
            <Button Name="btnCancel"  Content="Annuler" HorizontalAlignment="Left" Margin="444,468,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.072,0.769" Click="btnCancel_Click"/>
        </Grid>
    </Border>
</Window>
